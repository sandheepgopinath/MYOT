
{
  "entities": {
    "DesignerProfile": {
      "title": "DesignerProfile",
      "type": "object",
      "description": "Represents a designer in the community.",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "profilePhotoUrl": { "type": "string" },
        "description": { "type": "string" },
        "privilege": { "type": "string", "description": "User access level, e.g., 'designer'" },
        "designsUploadedCount": { "type": "number", "default": 0 },
        "designsApprovedCount": { "type": "number", "default": 0 },
        "salesCount": { "type": "number", "default": 0 },
        "totalRevenue": { "type": "number", "default": 0 },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastActiveAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "name", "email"]
    },
    "DesignerDesign": {
      "title": "DesignerDesign",
      "type": "object",
      "description": "A design uploaded by a designer.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "imageUrl": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected", "not approved"] },
        "moderationComment": { "type": "string" },
        "isActive": { "type": "boolean", "default": true },
        "salesCount": { "type": "number", "default": 0 },
        "profit": { "type": "number", "default": 0 },
        "uploadedAt": { "type": "string", "format": "date-time" },
        "approvedAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "authorName": { "type": "string" }
      },
      "required": ["name", "imageUrl", "status"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "google.com", "phone"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/DesignerProfile" },
      "description": "Top-level collection for designer profiles."
    },
    "/users/{userId}/designs/{designId}": {
      "schema": { "$ref": "#/entities/DesignerDesign" },
      "description": "Sub-collection of designs for a specific designer."
    },
    "/roles_admin/{adminId}": {
      "schema": { "type": "object" },
      "description": "Admin roles."
    },
    "/tshirt_types/{tshirtTypeId}": { "schema": { "type": "object" }, "description": "T-shirt types." },
    "/tshirt_gsms/{tshirtGsmId}": { "schema": { "type": "object" }, "description": "T-shirt GSMs." },
    "/tshirt_colors/{tshirtColorId}": { "schema": { "type": "object" }, "description": "T-shirt colors." },
    "/tshirts/{tshirtId}": { "schema": { "type": "object" }, "description": "T-shirts." },
    "/community_designs/{designId}": { "schema": { "type": "object" }, "description": "Global list for moderation." }
  }
}
