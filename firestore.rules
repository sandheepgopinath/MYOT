rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Use exists to check for admin role document
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /roles_admin/{adminId} {
      // Allow users to read their own role document without recursive checks
      allow get: if isSignedIn() && request.auth.uid == adminId;
      // Allow admins to manage roles
      allow read: if isAdmin();
      // Allow initial bootstrap check (listing with limit 1)
      allow list: if isSignedIn() && request.query.limit == 1;
      // Allow initial bootstrap creation
      allow create: if isSignedIn() && request.auth.uid == adminId;
      allow update, delete: if false;
    }

    match /users/{userId} {
      allow read: if true;
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isOwner(userId);

      match /designs/{designId} {
        allow read: if true;
        allow update: if isOwner(userId) || isAdmin();
        allow create, delete: if isOwner(userId);
      }
    }

    match /tshirt_types/{tshirtTypeId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirt_gsms/{tshirtGsmId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirt_colors/{tshirtColorId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirts/{tshirtId} { allow read: if true; allow write: if isAdmin(); }

    match /community_designs/{designId} {
      // Explicitly allow admins to list all community designs for moderation
      allow list: if isAdmin();
      // Allow getting a specific design if admin or the original owner
      allow get: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}