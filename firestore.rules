
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Direct exists check for administrator status
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /roles_admin/{adminId} {
      // Allow users to check their own admin status (needed for isAdmin exists check)
      allow get: if isSignedIn() && request.auth.uid == adminId;
      // Allow existing admins to see other admin entries
      allow list: if isAdmin();
      // Allow bootstrap check and email pre-verification check (listing with limit 1)
      // Note: Removed isSignedIn() to allow the pre-login privilege check requested by user
      allow list: if request.query.limit == 1;
      // Allow bootstrap creation of the first admin
      allow create: if isSignedIn() && request.auth.uid == adminId;
      allow update, delete: if false;
    }

    match /users/{userId} {
      allow read: if true;
      allow update: if isOwner(userId) || isAdmin();
      allow create, delete: if isOwner(userId);

      match /designs/{designId} {
        allow read: if true;
        allow update: if isOwner(userId) || isAdmin();
        allow create, delete: if isOwner(userId);
      }
    }

    match /tshirt_types/{tshirtTypeId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirt_gsms/{tshirtGsmId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirt_colors/{tshirtColorId} { allow read: if true; allow write: if isAdmin(); }
    match /tshirts/{tshirtId} { allow read: if true; allow write: if isAdmin(); }

    match /community_designs/{designId} {
      // Allow admins to moderate and list all designs
      allow read, list: if isAdmin();
      // Allow owners to see their own entries in the mirror
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow signed-in users to create their mirrored design entry
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow updates and deletes by owner or admin
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
