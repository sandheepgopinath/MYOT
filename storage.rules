rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Cross-service check: Verify if the user exists in the roles_admin Firestore collection
      // Note: In storage rules, we use 'firestore.exists'
      return isSignedIn() && firestore.exists(/databases/(default)/documents/roles_admin/$(request.auth.uid));
    }

    match /designs/{userId}/{allPaths=**} {
      // Allow everyone to view designs (Community)
      allow read: if true;
      // Only the owner can upload to their own directory
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /tshirts/{allPaths=**} {
      // Allow everyone to view product images
      allow read: if true;
      // Only admins can upload product images
      allow write: if isAdmin();
    }
  }
}